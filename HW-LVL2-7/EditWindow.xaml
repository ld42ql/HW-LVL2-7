<Window x:Class="HW_LVL2_7.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_LVL2_7"
        mc:Ignorable="d"
          WindowStartupLocation="CenterScreen" 
        Title="Редактирование" Height="250"  Width="300"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="15" Grid.RowSpan="2" >
            <TextBlock Text="ФИО" Margin="5"/>
            <TextBox x:Name="txtFIO"  Margin="5, 0" Text="{Binding 1}"/>

            <TextBlock Text="Отдел" Margin="5"/>
            <TextBox x:Name="txtDepartmet" Margin="5, 0" Text="{Binding 2}"/>

            <TextBlock Text="Зарплата" Margin="5"/>
            <TextBox x:Name="txtSalary"  Margin="5, 0" Text="{Binding 3}"/>

        </StackPanel>
        <Button Grid.Row="1" x:Name="applyBtn" Content="Принять" Width="100"  VerticalAlignment="Top" />

    </Grid>
</Window>
